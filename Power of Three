bool isPowerOfThree(int n) {
    int i;
    if(n==1)
    {
        return true;
    }
    else if(n<=0||n==2)
    {
        return false;
    }else if(n>1)
    {
        while(n>1)
        {
            if(n%3==1||n%3==2)
            {
                return false;
            }
            n=n/3;
        }
    }
    return true;
}
